<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sorum.sorum">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.login.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity
            android:name=".view.exam.ExamFinishActivity"
          />
        <activity
            android:name=".view.exam.ExamActivity" />
        <activity
            android:name=".view.statistic.IstatistikActivity" />
        <activity
            android:name=".view.profil.AyarlarActivity" />
        <activity
            android:name=".view.login.RegisterTwoActivity" />
        <activity
            android:name=".view.login.PassChangeActivity" />
        <activity
            android:name=".view.login.RegisterActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.deneme.DenemeStartActivity" />
        <activity
            android:name=".view.login.LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>