<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorular"
            android:textColor="@color/turuncu"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/sorularLabel"
            android:textSize="18sp"/>
        <ListView
            android:id="@+id/istatistikSorularListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/sorularLabel" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denemeler"
            android:textColor="@color/turuncu"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/denemelerLabel"
            android:textSize="18sp"/>
        <ListView
            android:id="@+id/istatistikDenemelerListview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/denemelerLabel" />
    </RelativeLayout>
</LinearLayout>